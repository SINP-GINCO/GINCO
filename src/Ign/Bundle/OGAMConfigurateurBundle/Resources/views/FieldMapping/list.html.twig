{#Â List the field mappings in a table, with delete and delete all actions#}

{% if fieldMappings is defined and fieldMappings|length > 0 %}
	<table id="mappingRelations" data-toggle="table" {{ (fieldMappings|length > 10) ? 'data-height="440"' }}
		   class="table table-hover table-condensed">
		<thead>
		<tr>
			<th>{{ 'fieldMapping.rule'|trans }}</th>
			<th class="text-center">{{ 'Edit'|trans }}</th>
			<th class="text-center">
				<a class="btn btn-default btn-xs" type="button"
				   href="{{ path('configurateur_field_mapping_remove_all',{ 'datasetId' : dataset.id, 'fileFormat': file.format } ) }}"
				   title="Tout supprimer">
					<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
				</a>
			</th>
		</tr>
		</thead>

		{% for mapping in fieldMappings %}
			<tr>
				<td class="row">
					<div class="col-sm-2">{% trans %}fieldMapping.copy{% endtrans %}</div>
					<div class="col-sm-3 longtext" title="{{ mapping.srcDataLabel }}">{{ mapping.srcDataLabel }}</div>
					<div class="col-sm-1">{{ 'fieldMapping.in'|trans }}</div>
					<div class="col-sm-3 longtext" title="{{ mapping.label }}">{{ mapping.label }}</div>
					<div class="col-sm-3 longtext" title="{{ mapping.dstDataLabel is defined ? mapping.dstDataLabel : mapping.dstData }}">{{  mapping.dstDataLabel is defined ? mapping.dstDataLabel : mapping.dstData  }}</div>
				</td>
				<td class="text-center">
					<a type="button" class="btn btn-default btn-xs"
					   href="{{ path('configurateur_field_mapping_edit',{ 'datasetId' : dataset.id, 'fileFormat': mapping.srcFormat, 'field': mapping.srcData, 'tableField': mapping.dstData, 'table': mapping.dstFormat} ) }}">
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					</a>
				</td>
				<td class="text-center">
					<a type="button" class="btn btn-default btn-xs"
					   href="{{ path('configurateur_field_mapping_remove',{ 'datasetId' : dataset.id, 'fileFormat': mapping.srcFormat, 'field': mapping.srcData, 'tableField': mapping.dstData, 'table': mapping.dstFormat} ) }}">
						<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
					</a>
				</td>
			</tr>
		{% endfor %}
	</table>
{% else %}
	<p>{{ 'fieldMapping.none'|trans }}</p>
{% endif %}