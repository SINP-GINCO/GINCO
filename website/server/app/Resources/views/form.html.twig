{# Override bootstrap horizontal layout#}
{% use "bootstrap_3_horizontal_layout.html.twig" %}

{# Display forms horizontally, label in col-sm-4 and inputs in col-sm-4 also #}
{% block form_label_class -%}
    col-sm-4
{%- endblock form_label_class %}

{% block form_group_class -%}
    col-sm-4
{%- endblock form_group_class %}

{# Put primary color in form buttons #}
{% block button_widget -%}
    {% set attr = attr|merge({class: (attr.class|default('btn-primary') ~ ' btn')|trim}) %}
    {{- parent() -}}
{%- endblock %}

{# Add a help block if present in data-help attributes #}
{% block form_help -%}
    {% for attrname, attrvalue in attr %}
        {% if attrname == 'data-help' %}
            <span class="help-block">{{ attrvalue|trans }}</span>
        {% endif %}
    {% endfor %}
{%- endblock form_help %}


{% block form_errors -%}
    {{ parent() }}
    <div class="no-error">
        {{- block('form_help') -}}
    </div>
{%- endblock form_errors %}

{# Render the custom LinkType form widget #}
{% block link_widget -%}
    {% set attr = attr|merge({class: (attr.class|default('') ~ ' form-inline form-inline-compound-field')|trim}) -%}
    <div {{ block('widget_container_attributes') }}>

        {# anchor #}
        <div class="form-group">
            <label class="control-label required" for="{{ form.anchor.vars.id }}">{{ translation_domain is same as(false) ? form.anchor.vars.label : form.anchor.vars.label|trans({}, translation_domain) }}</label>
            {{- form_widget(form.anchor) -}}
            {{- form_errors(form.anchor) -}}

        </div>

        {# href #}
        <div class="form-group">
            <label class="control-label required" for="{{ form.href.vars.id }}">{{ translation_domain is same as(false) ? form.href.vars.label : form.href.vars.label|trans({}, translation_domain) }}</label>
            {{- form_widget(form.href) -}}
            {{- form_errors(form.href) -}}
        </div>

        {# target #}
        <div class="form-group">
            <label class="control-label required" for="{{ form.target.vars.id }}">{{ translation_domain is same as(false) ? form.target.vars.label : form.target.vars.label|trans({}, translation_domain) }}</label>
            {{- form_widget(form.target) -}}
            {{- form_errors(form.target) -}}
        </div>
    </div>
{%- endblock link_widget %}
