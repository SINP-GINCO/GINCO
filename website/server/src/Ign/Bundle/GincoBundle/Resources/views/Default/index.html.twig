{% extends 'base.html.twig' %}

{% block description %}{% endblock %}
{% block breadcrumb %}
<ol class="breadcrumb">
	{% if route_exists('homepage') %}<li><a href="{{ path('homepage') }}">{%trans %}&nbsp;{% endtrans %}</a></li>{% endif %}
	
</ol>
{% endblock breadcrumb %}
{% block body %}
    <h1>{{ configurationManager.getConfig('site_name', 'Plateforme GINCO') }}</h1>

    <div class="row">
        <div class="col-sm-8">
            {{ content.intro.value|raw }}
        </div>
        <div class="col-sm-4">
            <img src="{{ asset('uploads/' ~ content.image.value) }}">
        </div>
    </div>

    <h3>Liens</h3>
    <ul>
        <li><a href="{{content.link.jsonDecodedValue.href}}" target="{{ content.link.jsonDecodedValue.target }}">
            {{ content.link.jsonDecodedValue.anchor|raw }}</a></li>

        <li><a href="{{ asset('uploads/' ~ content.file.jsonDecodedValue.file) }}">{{ content.file.jsonDecodedValue.anchor|raw }}</a>
            </li>

    </ul>



      <h2>{{ 'Menu.RegionalData'|trans }}</h2>
      <ul>
        <li><a href="{{ path('query_home') }}?SCHEMA=RAW_DATA">{{ 'Menu.RegionalData.Access'|trans }}</a></li>
      </ul>

    {% if (app.user and app.user.isAllowed('DATA_INTEGRATION')) %}
        <h2>{{ 'Menu.Datasets'|trans }}</h2>
        <ul>
            <li><a href="{{ path('jdd_list') }}">{{ 'Menu.ManageDatasets'|trans }}</a></li>
            <li><a href="{{ path('jdd_new') }}">{{ 'Menu.ImportDataset'|trans }}</a></li>
        </ul>
    {% endif %}

    {% if (app.user and app.user.isAllowed('CONFIGURE_METAMODEL')) %}
        <h2>{{ 'Menu.Configurator'|trans }}</h2>
        <ul>
            <li><a href="{{ path('configurateur_model_index') }}">{{ 'Menu.DataModels'|trans }}</a></li>
            <li><a href="{{ path('configurateur_dataset_import_index') }}">{{ 'Menu.ImportModels'|trans }}</a></li>
            <li><a href="{{ path('configurateur_data_index') }}">{{ 'Menu.DataDictionary'|trans }}</a></li>
        </ul>
    {% endif %}

    {% if (app.user and (app.user.isAllowed('MANAGE_USERS') or app.user.isAllowed('CONFIGURE_WEBSITE_PARAMETERS') or app.user.isAllowed('CHECK_CONF'))) %}
        <h2>{{ 'Menu.Administration'|trans }}</h2>
        <ul>
            {% if (app.user.isAllowed('MANAGE_USERS')) %}
                <li><a href="{{ path('usermanagement_showUsers') }}">{{ 'Menu.Users'|trans }}</a></li>
                <li><a href="{{ path('usermanagement_showProviders') }}">{{ 'Menu.Providers'|trans }}</a></li>
                <li><a href="{{ path('usermanagement_showRoles') }}">{{ 'Menu.Roles'|trans }}</a></li>
            {% endif %}
            {% if (app.user.isAllowed('CONFIGURE_WEBSITE_PARAMETERS')) %}
                <li><a href="{{ path('configuration_parameters') }}">{{ 'Menu.PlatformParameters'|trans }}</a></li>
            {% endif %}
            {% if (app.user.isAllowed('CHECK_CONF')) %}
                <li><a href="{{ path('checkconf_showconfig') }}">{{ 'Menu.CheckConfiguration'|trans }}</a></li>
            {% endif %}
        </ul>
    {% endif %}

{% endblock %}
