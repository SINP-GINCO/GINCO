/*******************************************
* Custom sorter for dee sent on date columns
********************************************/
function sentOnSorter(a, b) {
    return new Date(b.trim()) - new Date(a.trim());
}

/*****************************************
* Custom sorter for created on date column
******************************************/
function createdOnSorter(a, b) {
    fda = $(a).attr('data-full-date');
    fdb = $(b).attr('data-full-date');
    return new Date(fdb) - new Date(fda);
}

/******************************************
* Custom sorter for jdd title and id column
*******************************************/
function jddTitleIdSorter(a, b) {
    ta = $(a).attr('data-title');
    tb = $(b).attr('data-title');
    return ta.localeCompare(tb);
}