{% extends "::base.html.twig" %}
{% form_theme form with ['form.html.twig', _self] %}

{% block form_label_class -%}
    col-sm-2
{%- endblock form_label_class %}

{% block form_group_class -%}
    col-sm-10
{%- endblock form_group_class %}

{% block body %}

    <h1>{% trans %}Configuration.main.title{% endtrans %}</h1>

    <ul class="nav nav-tabs">
        <li role="presentation"><a href="{{  path('configuration_parameters') }}">{{ 'Configuration.params.title'|trans }}</a></li>
        <li role="presentation" class="active"><a href="#">{{ 'Configuration.homepage.title'|trans }}</a></li>
        <li role="presentation"><a href="{{  path('configuration_presentation') }}">{{ 'Configuration.presentation.title'|trans }}</a></li>
    </ul>

    <h2>{{ 'Configuration.homepage.title'|trans  }}</h2>

    {{ form_start(form) }}

    <h3>Paragraphe et image d'introduction (premier bandeau)</h3>

    {{ form_row(form.homepageIntro) }}
    {{ form_row(form.homepageImage) }}

    <hr>
    <h3>Bloc de liens publics (deuxième bandeau, gauche)</h3>
    <p>Ce bloc de liens/documents sera affiché à <em>tous les visiteurs de la plateforme</em>. Les urls indiquées peuvent être externes
    (commençant par http(s)://), ou internes (commençant par /). Laissez vides ceux que vous ne voulez pas remplir.</p>

    {{ form_row(form.homepagePublicLinksTitle) }}

    {% for link in form.homepageLinks %}
        {{ form_row(link) }}
    {% endfor %}

    {% for link in form.homepageDocs %}
        {{ form_row(link) }}
    {% endfor %}

    <hr>
    <h3>Bloc de liens privés (deuxième bandeau, droite)</h3>
    <p>Ce bloc de liens/documents sera affiché aux <em>utilisateurs connectés de la plateforme</em>. Les urls indiquées peuvent être externes
    (commençant par http(s)://), ou internes (commençant par /). Laissez vides ceux que vous ne voulez pas remplir. Laissez le titre vide
    si vous ne voulez pas afficher ce bloc.</p>

    {{ form_row(form.homepagePrivateLinksTitle) }}

    {% for link in form.homepagePrivateLinks %}
        {{ form_row(link) }}
    {% endfor %}

    {% for link in form.homepagePrivateDocs %}
        {{ form_row(link) }}
    {% endfor %}

    <hr>
    {{ form_row(form.submit) }}
    {{ form_end(form) }}

{% endblock %}
