{% extends "::base.html.twig" %}


{% form_theme form with ['form.html.twig', _self] %}
{% block form_label_class -%}
    col-sm-12
{%- endblock form_label_class %}

{% block form_group_class -%}
    col-sm-12
{%- endblock form_group_class %}

{% block body %}
    
    <h1>{% trans %}Providers.add.provider{% endtrans %}</h1>
    <p class="v-spacer"></p>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
    		<p>{%trans %}Providers.add.explain{% endtrans%}</p>
		</div>
	</div>
	
    {{ form_start(form) }}
    <div class="row">
        <div class="col-sm-3">{{ form_label(form.label) }}</div>
        <div class="col-sm-6">{{ form_widget(form.label) }}
            {{ form_errors(form.label) }}</div>
        <div class="col-sm-3">{{ form_widget(form.submit) }}</div>
    </div>
    {{ form_end(form) }}
    
    <p class="v-spacer"></p>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
    		<p>{%trans %}Providers.add.more{% endtrans%}</p>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        {% include '@IgnGinco/UsermanagementController/provider_add.js.twig' %}
		var formField = "#provider_search_label";
        searchOrganisme(formField);
    </script>
{% endblock %}