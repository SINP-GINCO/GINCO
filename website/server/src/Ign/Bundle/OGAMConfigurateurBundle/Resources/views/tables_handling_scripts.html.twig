					datasetId : '{{dataset.id}}',
					format: '{{ file.format }}'
				});
				var form = $('<form name="form_fields_update" action="' + url + '" method="post">' +
					  '<input type="text" name="addedFields" value="' + addedNames + '" />' +
					  '</form>');
			}

			$('body').append(form);
			$('form[name=form_fields_update]').hide()
